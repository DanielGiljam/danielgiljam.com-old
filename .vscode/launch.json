  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Firebase Local Emulator Suite",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "emulate"],
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": true
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Web / API server started at http://localhost:(\\d+)",
        "uriFormat": "http://localhost:%s"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js Dev Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"],
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": true
      },
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "started server on http://localhost:3000",
        "uriFormat": "http://localhost:3000"
      }
    }
  ],
  "compounds": [
    {
      "name": "Next.js Dev Server + Firebase Emulators",
      "configurations": ["Next.js Dev Server", "Firebase Local Emulator Suite"]
    }
  ]
}
