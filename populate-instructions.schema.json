{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/PopulateInstructions",
  "definitions": {
    "PopulateInstructions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/PopulateInstruction"
      }
    },
    "PopulateInstruction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_sources": {
          "type": "object",
          "properties": {
            "github": {
              "$ref": "#/definitions/GitHubConfig"
            },
            "npm": {
              "$ref": "#/definitions/NPMConfig"
            }
          },
          "additionalProperties": false
        },
        "name": {
          "anyOf": [
            {
              "$ref": "#/definitions/Project.Name"
            },
            {
              "$ref": "#/definitions/GitHubDirective"
            },
            {
              "$ref": "#/definitions/NPMDirective"
            }
          ]
        },
        "description": {
          "anyOf": [
            {
              "$ref": "#/definitions/Project.Description"
            },
            {
              "$ref": "#/definitions/GitHubDirective"
            },
            {
              "$ref": "#/definitions/NPMDirective"
            }
          ]
        },
        "lifespan": {
          "anyOf": [
            {
              "$ref": "#/definitions/Project.Lifespan%3Cstring%3E"
            },
            {
              "$ref": "#/definitions/GitHubDirective"
            }
          ]
        },
        "latestRelease": {
          "anyOf": [
            {
              "$ref": "#/definitions/Project.Release%3Cstring%3E"
            },
            {
              "$ref": "#/definitions/GitHubDirective"
            },
            {
              "$ref": "#/definitions/NPMDirective"
            }
          ]
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Project.Link"
          }
        },
        "pageContents": {
          "anyOf": [
            {
              "$ref": "#/definitions/Project.PageContents"
            },
            {
              "$ref": "#/definitions/GitHubDirective"
            },
            {
              "$ref": "#/definitions/NPMDirective"
            }
          ]
        },
        "downloads": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Project.Download"
          }
        }
      }
    },
    "GitHubConfig": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "countLifespanAsStillOngoing": {
          "type": "boolean"
        }
      },
      "required": ["owner", "name"],
      "additionalProperties": false
    },
    "NPMConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "Project.Name": {
      "type": "string"
    },
    "GitHubDirective": {
      "type": "string",
      "enum": ["_github"]
    },
    "NPMDirective": {
      "type": "string",
      "enum": ["_npm"]
    },
    "Project.Description": {
      "type": "string"
    },
    "Project.Lifespan<string>": {
      "type": "object",
      "properties": {
        "begun": {
          "type": "string"
        },
        "ended": {
          "type": "string"
        }
      },
      "required": ["begun"],
      "additionalProperties": false
    },
    "Project.Release<string>": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        },
        "isPrerelease": {
          "type": "boolean"
        }
      },
      "required": ["version", "timestamp"],
      "additionalProperties": false
    },
    "Project.Link": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["github", "npm"]
        },
        "url": {
          "type": "string"
        }
      },
      "required": ["type", "url"],
      "additionalProperties": false
    },
    "Project.PageContents": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "html": {
              "type": "string"
            },
            "css": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Project.Download": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["binary"]
        },
        "platform": {
          "type": "string",
          "enum": ["windows", "macos"]
        },
        "url": {
          "type": "string"
        }
      },
      "required": ["type", "platform", "url"],
      "additionalProperties": false
    }
  }
}
